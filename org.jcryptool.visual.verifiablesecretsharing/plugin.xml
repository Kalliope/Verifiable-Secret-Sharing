      </Visual>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.jcryptool.visual.verifiablesecretsharing.views.VerifiableSecretSharingView">
         <command
               commandId="org.jcryptool.visual.verifiablesecretsharing.restartCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/new_wiz.gif"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.jcryptool.visual.verifiablesecretsharing.views.VerifiableSecretSharingView">
